DROP DATAVERSE PeterList IF EXISTS;
CREATE DATAVERSE PeterList;
USE PeterList;

CREATE TYPE AddressType AS {
	streetName: string?,
	buildingNumber: int?,
	city: string,
	state: string,
	zip: int?,
	country: string
};

CREATE TYPE PostingDetailsType AS {
	location: AddressType,
	dateTime: datetime,
	description: string,
	amount: float?,
	userID: string,
	automatedEmailID: string?,
	photos: string?							
};

CREATE TYPE PostingType AS {
	postID: string,
	postInfo: PostingDetailsType,
	postingCategory: string
};

CREATE TYPE ContactType AS {
	phoneNumber: string,
	email: string
};

CREATE TYPE UserType AS {
	userID: string,
	contactInfo: ContactType,
	userPassword: string
};

CREATE TYPE JobType AS {
	postID: string,
	jobInfo: PostingDetailsType,
	jobType: string,
	jobCategory: string,
	organizationName: string,
	jobTitle: string,
	jobRequirement: string
};

CREATE TYPE HousingType AS {
	postID: string,
	housingInfo: PostingDetailsType,
	bedroomNumber: int,
	petAllowed: boolean,
	housingCategory: string,
	localityName: string?,
	size: float?,
	startDate: datetime,
	endDate: datetime?,
	occupants: int?,
	bathroomType: boolean,
	roommate: int?,
	hasParking: boolean
};

CREATE TYPE EventType AS {
	postID: string,
	eventInfo: PostingDetailsType,
	startDate: datetime,
	endDate: datetime?,
	eventCategory: string,
	organizationName: string,
	eventTitle: string
};

CREATE TYPE ItemsSaleType AS {
	postID: string,
	itemInfo: PostingDetailsType,
	itemName: string?,
	itemCategory: string,
	condition: string?
};

CREATE TYPE LostFoundType AS {
	postID: string,
	itemFoundInfo: PostingDetailsType,
	itemFoundDate: datetime,
	itemName: string,
	lostOrFound: boolean
};

